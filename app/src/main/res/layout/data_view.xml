<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recordRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingTop="4dp">

    <TextView
        android:id="@+id/vw_start_time"
        android:layout_width="@dimen/column_width"
        android:layout_height="match_parent"
        android:textAppearance="@style/TableText"/>

    <TextView
        android:id="@+id/vw_stop_time"
        android:layout_width="@dimen/column_width"
        android:layout_height="match_parent"
        android:textAppearance="@style/TableText"/>

    <TextView
        android:id="@+id/vw_duration"
        android:layout_width="@dimen/column_width"
        android:layout_height="match_parent"
        android:textAppearance="@style/TableText"/>

    <TextView
        android:id="@+id/vw_frequency"
        android:layout_width="@dimen/column_width"
        android:layout_height="match_parent"
        android:textAppearance="@style/TableText"/>

</LinearLayout>